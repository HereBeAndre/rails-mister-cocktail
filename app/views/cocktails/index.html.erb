<div class="navbar navbar-expand-sm navbar-light navbar-lewagon fixed-top" style="width: 100%">
  <%= link_to "#", class: "navbar-brand" do %>
    <%= image_tag "/assets/images/logo.png" %>
  <% end %>
  <h1>Cocktails Club</h1>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to "Home", "#", class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to 'New cocktail', new_cocktail_path, class: "nav-link" %>
      </li>
      <li class="nav-item dropdown">
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Action", "#", class: "dropdown-item" %>
          <%= link_to "Another action", "#", class: "dropdown-item" %>
        </div>
      </li>
    </ul>
  </div>
</div>

<br>
<br>
<br>

<div class="banner" src="<%= asset_path( 'banner.jpg' ) %>" style="object-fit: cover; background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%); max-width: 100%; margin: 0 0; ">
  <div class="container d-flex justify-content-center align-items-center">
  </div>
  <div class="d-flex justify-content-center row row-cols-1 row-cols-md-4">
    <% @cocktails.first(9).reverse.each do |cocktail| %>
      <div class="card text-white bg-dark col mb-3 mx-2">
        <img src="<%= asset_path( 'cocktail.jpg' ) %>" class="card-img-top" alt="Description of the cocktail">
        <div class="card-body">
          <h5 class="card-title"><%= cocktail.name %></h5>
          <p class="card-text">ingredient</p>
          </div>
        <div class="card-footer">
          <small class="text-muted">‚≠ê Most popular</small>
          <div class="btn">
            <%= link_to 'Show', cocktail_path(cocktail), :class => "btn btn-outline-light" %>
            <%= link_to 'Edit', cocktail_doses_path(cocktail), method: :post, :class => "btn btn-outline-light"%>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

