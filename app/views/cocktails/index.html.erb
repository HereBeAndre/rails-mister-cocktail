<div class="navbar navbar-expand-sm navbar-light navbar-lewagon fixed-top align-items-start" style="width: 100%; height: 4.8rem">

  <%= link_to "#", class: "navbar-brand d-flex align-items-center" do %>
    <%= image_tag("logo.png") %>
    <h1 style="font-weight: bolder; color: rgb(52, 58, 64)">SpeakEasy Club</h1>
  <% end %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= simple_form_for :search, url: root_path, method: :get do |f| %>
          <div class="d-flex search-form-control form-group align-items-center">
            <input class="form-control string required" type="text" name="search[query]" id="search_query" />
            <button name="button" type="submit" class="btn btn-flat" >
              <i class="fas fa-search"></i> Search
            </button>
          </div>
        <% end %>
      </li>
      <li class="nav-item d-flex align-items-center">
        <%= link_to "Home", root_path, class: "nav-link" %>
        <%= link_to 'New cocktail', new_cocktail_path, class: "nav-link" %>
      </li>
    </ul>
  </div>
</div>

<div class="container d-flex justify-content-center align-items-center">
  <div class="d-flex justify-content-center row row-cols-3 row-cols-md-4 row-cols-lg-4">
    <% @cocktails.first(9).each do |cocktail| %>
      <div class="card text-white bg-dark col mb-3 mx-2">
        <img src="<%= cl_image_path("card_cocktail.jpg") %>" class="card-img-top" alt="Description of the cocktail">
        <div class="card-body">
          <h5 class="card-title"><%= cocktail.name %></h5>
        </div>
        <div class="card-footer">
          <small class="text-muted">‚≠ê Most popular</small>
          <div class="btn">
            <%= link_to 'Recipe', cocktail_path(cocktail), :class => "btn btn-outline-light" %>
            <%= link_to 'Edit', edit_cocktail_path(cocktail), :class => "btn btn-outline-light"%>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
