<div class="container d-flex justify-content-center align-items-center" style="color: white">
  <h2><%= @cocktail.name %></h2>
  <%= link_to 'Back', root_path, class: "btn btn-light mx-3" %>
</div>
  <div class="row justify-content-center">
    <div class="col-sm-12 col-md-6">
      <table class="table table-bordered" style="color: white">
        <tbody>
          <thead>
            <th>Ingredient</th>
            <th>Action</th>
          </thead>
          <% @cocktail.doses.each do |dose| %>
            <tr>
              <td style="color: white"><%= dose.ingredient.name %> - <%=  dose.description %></td>
              <td>
                <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
                  <i class="fa fa-trash destroy_dose"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
